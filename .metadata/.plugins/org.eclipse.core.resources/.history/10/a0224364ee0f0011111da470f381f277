
CC=gcc
CFLAGS=-Wall -O2 $(pkg-config --cflags glib-2.0)
LDFLAGS=$(pkg-config --libs glib-2.0) 
SCRIPT_DIR=../scripts
DIST_DIR=../dist

all:
	cd src && make all
	
dist: clean all
	mkdir $(DIST_DIR)
	mkdir $(DIST_DIR)/apps
	mkdir $(DIST_DIR)/config
	mkdir $(DIST_DIR)/log
	cp $(PROGNAME) $(DIST_DIR)
	cp $(SCRIPT_DIR)/* $(DIST_DIR)

clean:
	cd src && make clean
	
